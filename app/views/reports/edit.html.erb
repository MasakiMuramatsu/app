<%= form_for @report do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, :size => 30 %>
    
    <%= f.label :about  %>
    <%= f.text_area :about, :size => "30x2" %>

    <%= f.label :day  %>
    <%= f.text_area :day, :size => "30x2" %>

    
    <%= f.submit "編集する" %>
  <% end %>

 
  